{
  "manifest_version": 3,
  "name": "ELI5 - Explain Like I'm 5",
  "version": "0.3.0",
  "description": "A tool to explain complex text and simplify pages.",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://eli5-backend-qd9n.onrender.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "marked.min.js",
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}