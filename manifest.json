{
  "manifest_version": 3,
  "name": "ELI5 - Explain Like I'm 5",
  "version": "0.1.0",
  "description": "A simple tool to explain complex text.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}